<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>artifact-with-dependencies</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../target/assembly</directory>
            <outputDirectory>assembly</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/src/main/docker/run.sh</source>
            <destName>run.sh</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/docker/graylog.conf</source>
            <destName>graylog.conf</destName>
        </file>
    </files>
</assembly>