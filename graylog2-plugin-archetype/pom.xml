  <artifactId>graylog2-plugin-archetype</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>maven-archetype</packaging>

  <name>graylog2-plugin-archetype</name>

  <developers>
    <developer>
      <id>bernd</id>
      <name>Bernd Ahlers</name>
      <email>bernd@torch.sh</email>
    </developer>
